@model BlackListNumberViewModel

@{
    ViewData["Title"] = "Black List Numbers";
}

<h1>Black List Numbers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Number</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.BlackListNumbers.First().Number)</th>
            <th>@Html.DisplayNameFor(model => model.BlackListNumbers.First().Reason)</th>
            <th>@Html.DisplayNameFor(model => model.BlackListNumbers.First().Time)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BlackListNumbers)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Number)</td>
                <td>@Html.DisplayFor(modelItem => item.Reason)</td>
                <td>@Html.DisplayFor(modelItem => item.Time)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @if (Model.PageNumber > 1)
    {
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">Previous</a>
    }
    @if ((Model.PageNumber * Model.PageSize) < Model.TotalItems)
    {
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
    }
</div>
