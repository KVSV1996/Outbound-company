<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Outbound_company</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Outbound_company.styles.css" asp-append-version="true" />
    <style>
        .status-indicator {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            display: inline-block;
        }

        .status-online {
            background-color: green;
        }

        .status-offline {
            background-color: red;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Outbound_company</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Companies" asp-action="Index">Companies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="NumberPools" asp-action="Index">Pools</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Call" asp-action="Index">Phone</a>
                        </li>
                    </ul>
                    <div id="asterisk-status" class="ml-auto">
                        <div id="asterisk-icon" class="status-indicator status-offline"></div> <!-- Значок статуса -->
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Outbound_company - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <script>
        $(document).ready(function () {
            function checkAsteriskStatus() {
                $.ajax({
                    url: '@Url.Action("Ping", "Asterisk")',
                    type: 'GET',
                    success: function (data) {
                        console.log(data); // Для отладки
                        if (data.ping === "pong") {
                            $('#asterisk-icon').removeClass('status-offline').addClass('status-online');
                        } else {
                            $('#asterisk-icon').removeClass('status-online').addClass('status-offline');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Error: " + status + " - " + error); // Для отладки
                        $('#asterisk-icon').removeClass('status-online').addClass('status-offline');
                    }
                });
            }

            // Проверка статуса каждые 5 секунд
            setInterval(checkAsteriskStatus, 5000);

            // Первоначальная проверка статуса при загрузке страницы
            checkAsteriskStatus();
        });
    </script>
</body>
</html>
